{
  "name": "node-npm-task-runner",
  "version": "1.0.0",
  "description": "Working with VSCode, Node scripts and NPM scripts as task runner",
  "main": "app.js",
  "config": {
    "build": {
      "outputDir": "dist",
      "hash": "true",
      "compressedCSS": "true"
    }
  },
  "scripts": {
    "build": "node ./bin/",
    "start": "browserify -t babelify -e ./src/app.js -o ./src/app/js/bundle.js",
    "start:watch": "watchify -v -t babelify -e ./src/app.js -o ./src/app/js/bundle.js",
    "lint:js": "eslint ./src/*.js ./bin/*.js"

  },
  "keywords": [],
  "author": {
    "name": "Thomas G. aka Drozerah",
    "email": "drozerah@gmail.com",
    "url": "https://github.com/Drozerah"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "babel-preset-minify": "^0.5.1",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "chalk": "^2.4.2",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fs-extra": "^8.1.0",
    "rimraf": "^3.0.0",
    "watchify": "^3.11.1"
  }
}
